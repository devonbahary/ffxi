# FFXI Crawler Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=ffxi_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
NODE_ENV=development

# Crawler Configuration
CRAWLER_USER_AGENT=FFXI-Crawler/1.0 (Educational Purpose)
CRAWLER_DELAY_MS=2000
CRAWLER_MAX_URLS_PER_WORKER=50

# Rate Limiting
RATE_LIMIT_QPS=0.5
GLOBAL_COOLDOWN_KEY=bg-wiki-crawler-cooldown
DEFAULT_COOLDOWN_SECONDS=30

# Logging
LOG_LEVEL=info