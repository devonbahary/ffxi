{
  "name": "ffxi-fullstack",
  "version": "1.0.0",
  "description": "FFXI Full Stack TypeScript Application",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "backend",
    "packages/*",
    "ingestion/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend && npm run build:packages && npm run build:ingestion",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:packages": "cd packages/sql && npm run build && cd ../redis && npm run build",
    "build:ingestion": "cd ingestion/discovery && npm run build && cd ../processing && npm run build",
    "lint": "npm run lint:frontend && npm run lint:backend && npm run lint:packages && npm run lint:ingestion",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:packages": "cd packages/sql && npm run lint && cd ../redis && npm run lint",
    "lint:ingestion": "cd ingestion/discovery && npm run lint && cd ../processing && npm run lint",
    "lint:fix": "npm run lint:frontend -- --fix && npm run lint:backend -- --fix && npm run lint:packages -- --fix && npm run lint:ingestion -- --fix",
    "discovery": "cd ingestion/discovery && npm run dev",
    "processing": "cd ingestion/processing && npm run dev",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:up:build": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:scale:processing": "docker-compose up --scale processing=3",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:prod:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:clean": "docker-compose down -v && docker system prune -f"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "prettier": "^3.0.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "typescript",
    "react",
    "express",
    "fullstack",
    "ffxi"
  ],
  "author": "",
  "license": "ISC"
}
